
@{
    Layout = null;
}
@model Capstone.Web.Models.User
@using Capstone.Web.Extensions

@if (Model == null)//there is no user logged in
{

    <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
            <li><a href="/home/index" id="home">Home</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li><a href="/user/register"><span class="glyphicon glyphicon-user" id="register"></span> Register </a></li>
            <li><a href="/user/login"><span class="glyphicon glyphicon-log-in" id="login"></span> Login </a></li>
        </ul>
    </div>
}
else if(Model.UserType == "r") // A user is logged in
{
    <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
            <li><a href="/home/index" id="home">Home</a></li>
            <li><a href="/function/report" id="report_pothole">Report Pothole</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li class="navbar-text" id="welcome">Welcome @Model.Name.Split(' ')[0]</li>
            <li><a href="/user/logout"><span class="glyphicon glyphicon-log-out" id="log_out"></span> Log Out </a></li>
        </ul>
    </div>
}
else if (Model.UserType == "e") // A user is logged in
{
    <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
            <li><a href="/home/index" id="home">Home</a></li>
            <li><a href="/function/report" id="report_pothole">Report Pothole</a></li>
            @*<li><a href="/function/review">Employee Portal</a></li>*@
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" id="employee_portal">Employee Portal<span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href='/function/review/?option=all' id="all_potholes">All Potholes</a></li>
                    <li><a href='/function/review/?option=uninspected' id="awaiting_insp">Awaiting Inspection</a></li>
                    <li><a href='/function/review/?option=inspected'id="awaiting_rep">Awaiting Repair</a></li>
                    <li><a href='/function/review/?option=inRepair'id="awaiting_in_prog">Repair in Progress</a></li>
                    <li><a href='/function/review/?option=complete'id="awaiting_comp">Repair Completed</a></li>
                </ul>
            </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li class="navbar-text" id="welcome">Welcome @Model.Name.Split(' ')[0]</li>
            <li><a href="/user/logout"><span class="glyphicon glyphicon-log-out" id="log_out"></span> Log Out </a></li>
        </ul>
    </div>
}